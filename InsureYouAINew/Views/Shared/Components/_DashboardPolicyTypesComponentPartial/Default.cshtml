@model List<PolicyGroupViewModel>

@{
    int total = ViewBag.TotalPolicyCount;
}

@functions {
    string GetEmoji(string policyType)
    {
        return policyType switch
        {
            "Eğitim" => "🎓",
            "Kasko" => "🚗",
            "Konut" => "🏠",
            "Sağlık" => "🩺",
            "Trafik" => "🚦",
            _ => "📄"
        };
    }
}

<div class="col-12 col-lg-6 col-xl-6 d-flex">
    <div class="card rounded-4 w-100">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h6 class="mb-0">En Çok Satılan Poliçeler</h6>
                <div class="fs-5 ms-auto dropdown">
                    <div class="dropdown-toggle dropdown-toggle-nocaret cursor-pointer" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></div>
                   
                </div>
            </div>
            <div class="">
                @foreach (var item in Model)
                {
                    var percentage = total > 0 ? (item.Count * 100 / total) : 0;

                    <div class="d-flex align-items-start gap-3">

                        <div class="product-box border d-flex justify-content-center align-items-center"
                             style="width:45px; height:45px; border-radius:10px; font-size:24px;">
                            @GetEmoji(item.PolicyType)
                        </div>

                        <div class="flex-grow-1">
                            <div class="progress-wrapper">
                                <p class="my-2">
                                    @item.PolicyType
                                    <span class="float-end">
                                        (@item.Count Poliçe Satışı)
                                        <span class="ms-3 fw-bold">@percentage%</span>
                                    </span>
                                </p>

                                <div class="progress" style="height: 4px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @percentage%"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <hr />
                }
               
   
            </div>
        </div>
    </div>
</div>