@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Sigorta Kategori Listesi</h5>
            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-search"></i></div>
                <input class="form-control ps-5" type="text" placeholder="aranacak kategori adı">
            </form>
        </div>
        <div class="table-responsive mt-3">
            <table class="table align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Sitede Gör</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <a href="/Category/DeleteCategory/@item.CategoryId" class="text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sil"><i class="bi bi-trash-fill"></i></a>
                            </td>
                            <td>
                                <a href="/Category/UpdateCategory/@item.CategoryId" class="text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Düzenle"><i class="bi bi-pencil-fill"></i></a>
                            </td>
                         
                            <td>
                                <a href="/Blog/GetBlogByCategory/@item.CategoryId" class="text-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sitede Gör"><i class="bi bi-eye-fill"></i></a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
            <a href="/Category/CreateCategory/" class="btn btn-info">Yeni Kategori Girişi</a>
        </div>
    </div>
</div>