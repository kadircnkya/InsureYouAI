@model List<Message>

@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="card shadow-sm rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <h5 class="mb-0 fw-bold">📥 Gelen Mesaj Listesi</h5>

            <form class="ms-auto position-relative">
                <div class="position-absolute top-50 translate-middle-y search-icon px-3">
                    <i class="bi bi-search"></i>
                </div>
                <input class="form-control ps-5 rounded-pill" type="text" placeholder="Aranacak kelimeler...">
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Ad Soyad</th>
                        <th>Konu</th>
                        <th>Email</th>
                        <th>Tarih</th>
                        <th>AI Kategori</th>
                        <th>Öncelik</th>
                        <th>Durum</th>
                        <th>Mesajı Aç</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <td>@count</td>

                            <td class="fw-semibold">@item.NameSurname</td>

                            <td>@item.Subject</td>

                            <td>
                                <span class="text-muted">@item.Email</span>
                            </td>

                            <td>@item.SendDate.ToString("dd-MMM-yyyy")</td>

                            <!-- AI CATEGORY BADGE -->
                            <td>
                                @if (!string.IsNullOrEmpty(item.AICategory))
                                {
                                    <span class="badge bg-info text-dark px-3 py-2 rounded-pill">
                                        <i class="bi bi-stars me-1"></i> @item.AICategory
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Bekleniyor</span>
                                }
                            </td>

                            <!-- PRIORITY BADGE -->
                            <td>
                                @switch (item.Priority)
                                {
                                    case "High":
                                        <span class="badge bg-danger px-3 py-2 rounded-pill">
                                            🔥 Yüksek
                                        </span>
                                        break;

                                    case "Medium":
                                        <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                                            ⚠️ Orta
                                        </span>
                                        break;

                                    default:
                                        <span class="badge bg-success px-3 py-2 rounded-pill">
                                            🟢 Düşük
                                        </span>
                                        break;
                                }
                            </td>

                            <!-- OKUNMA DURUMU -->
                            <td>
                                @if (item.IsRead)
                                {
                                    <span class="badge bg-success">Okundu</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Okunmadı</span>
                                }
                            </td>

                            <!-- Mesaj Aç -->
                            <td>
                                <a href="/Message/Detail/@item.MessageId" class="text-primary" data-bs-toggle="tooltip" title="Mesajı Aç">
                                    <i class="bi bi-eye-fill fs-5"></i>
                                </a>
                            </td>

                            <!-- Güncelle -->
                            <td>
                                <a href="/Message/UpdateMessage/@item.MessageId" class="text-warning" data-bs-toggle="tooltip" title="Düzenle">
                                    <i class="bi bi-pencil-fill fs-5"></i>
                                </a>
                            </td>

                            <!-- Sil -->
                            <td>
                                <a href="/Message/DeleteMessage/@item.MessageId" class="text-danger" data-bs-toggle="tooltip" title="Sil">
                                    <i class="bi bi-trash-fill fs-5"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a href="/Message/CreateMessage/" class="btn btn-primary rounded-pill px-4 mt-2">
                + Yeni Mesaj Girişi
            </a>
        </div>
    </div>
</div>
