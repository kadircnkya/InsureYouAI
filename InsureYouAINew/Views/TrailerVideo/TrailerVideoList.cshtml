@model List<TrailerVideo>

@{
    ViewData["Title"] = "TrailerVideoList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body">

        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="bi bi-camera-reels"></i> Ana Sayfa Video Alanı
            </h4>

            <!-- Search -->
            <form class="ms-auto position-relative" style="max-width: 260px;">
                <div class="position-absolute top-50 translate-middle-y px-3">
                    <i class="bi bi-search text-secondary"></i>
                </div>
                <input class="form-control ps-5 rounded-pill shadow-sm" type="text" placeholder="Arama yap...">
            </form>
        </div>

        <!-- Table -->
        <div class="table-responsive mt-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="text-muted">Başlık</th>
                        <th class="text-muted text-center">Video</th>
                        <th class="text-center text-muted">Güncelle</th>
                        <th class="text-center text-muted">Sil</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row-hover">

                            <td class="fw-semibold text-dark">
                                <i class="bi bi-play-circle text-primary me-1"></i>
                                @item.Title
                            </td>

                            <td class="text-center">
                                <a href="@item.VideoUrl"
                                   target="_blank"
                                   class="btn btn-sm btn-primary rounded-pill shadow-sm px-3">
                                    <i class="bi bi-play-btn"></i> Videoyu Aç
                                </a>
                            </td>

                            <td class="text-center">
                                <a href="/TrailerVideo/UpdateTrailerVideo/@item.TrailerVideoId"
                                   class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                            </td>

                            <td class="text-center">
                                <a href="/TrailerVideo/DeleteTrailerVideo/@item.TrailerVideoId"
                                   class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm">
                                    <i class="bi bi-trash-fill"></i> Sil
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Create Button -->
        <div class="mt-4 text-end">
            <a href="/TrailerVideo/CreateTrailerVideo/" class="btn btn-lg btn-primary rounded-pill shadow px-4">
                <i class="bi bi-plus-circle me-1"></i> Yeni Video Girişi
            </a>
        </div>

    </div>
</div>

<style>
    .table-row-hover:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }
</style>
